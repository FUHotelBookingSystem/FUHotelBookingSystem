@page
@model PRN222.Assignment.FUHotelBookingSystem.RazorPages.Pages.AuhthenticatePage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-primary">Register</h1>

<h4 class="text-center">Create Your Account</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Full Name -->
                    <div class="form-group mb-3">
                        <label asp-for="User.FullName" class="control-label">Full Name</label>
                        <input asp-for="User.FullName" class="form-control" placeholder="Enter your full name" />
                        <span asp-validation-for="User.FullName" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-group mb-3">
                        <label asp-for="User.Email" class="control-label">Email</label>
                        <input asp-for="User.Email" type="email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group mb-3">
                        <label asp-for="User.PasswordHash" class="control-label">Password</label>
                        <input asp-for="User.PasswordHash" type="password" class="form-control" placeholder="Create a password" />
                        <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
                    </div>

                    <!-- Phone -->
                    <div class="form-group mb-3">
                        <label asp-for="User.Phone" class="control-label">Phone</label>
                        <input asp-for="User.Phone" class="form-control" placeholder="Enter your phone number" />
                        <span asp-validation-for="User.Phone" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group text-center">
                        <input type="submit" value="Create Account" class="btn btn-primary btn-lg w-100" />
                    </div>
                    <div class="text-center mt-3">
                        <a asp-page="Index" class="text-decoration-none text-muted">Already have an account? Login here</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
