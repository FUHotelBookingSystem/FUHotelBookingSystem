@page
@model PRN222.Assignment.FUHotelBookingSystem.RazorPages.Pages.AuhthenticatePage.EditModel

@{
    ViewData["Title"] = "Edit User";
}

<style>
    body {
        background: url('https://source.unsplash.com/1600x900/?hotel,interior') no-repeat center center/cover;
        font-family: 'Poppins', sans-serif;
    }

    .card-custom {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease-in-out;
    }

        .card-custom:hover {
            transform: scale(1.02);
        }

    .btn-custom {
        background: linear-gradient(135deg, #ff8c00, #ff3d00);
        color: white;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-custom:hover {
            opacity: 0.8;
            transform: scale(1.05);
        }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px;
        font-size: 16px;
    }
</style>

<div class="container mt-5 d-flex justify-content-center">
    <div class="card card-custom p-4" style="width: 50%;">
        <div class="text-center">
            <h2 class="text-primary fw-bold"><i class="fas fa-user-edit"></i> Edit User</h2>
        </div>

        <hr class="my-4">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.Id" />

            <div class="form-group">
                <label asp-for="User.FullName" class="control-label"><i class="fas fa-user"></i> Full Name</label>
                <input asp-for="User.FullName" class="form-control" />
                <span asp-validation-for="User.FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Email" class="control-label"><i class="fas fa-envelope"></i> Email</label>
                <input asp-for="User.Email" class="form-control" readonly="readonly"/>
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.PasswordHash" class="control-label"><i class="fas fa-lock"></i> Password</label>
                <input asp-for="User.PasswordHash" type="password" class="form-control" />
                <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Phone" class="control-label"><i class="fas fa-phone"></i> Phone</label>
                <input asp-for="User.Phone" class="form-control" />
                <span asp-validation-for="User.Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Role" class="control-label"><i class="fas fa-user-tag"></i> Role</label>
                <input asp-for="User.Role" class="form-control" readonly="readonly  />
                <span asp-validation-for="User.Role" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.CreatedAt" class="control-label"><i class="fas fa-calendar-alt"></i> Created At</label>
                <input asp-for="User.CreatedAt" class="form-control" readonly="readonly  />
                <span asp-validation-for="User.CreatedAt" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <input type="submit" value="Save" class="btn btn-custom me-2">
                <a asp-page="/HomePage/Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Thêm FontAwesome để có icon đẹp -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
