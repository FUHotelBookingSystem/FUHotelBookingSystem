@page
@model PRN222.Assignment.FUHotelBookingSystem.RazorPages.Pages.HomePage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background: url('https://source.unsplash.com/1600x900/?luxury-hotel,resort') no-repeat center center/cover;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .hotel-details-container {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        padding: 30px;
        max-width: 800px;
        margin: 50px auto;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

        .hotel-details-container h1 {
            font-size: 32px;
            font-weight: bold;
            color: #ff6f00;
            margin-bottom: 20px;
        }

    .hotel-img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .hotel-info dt {
        font-weight: bold;
        color: #444;
        font-size: 18px;
        text-align: left;
    }

    .hotel-info dd {
        font-size: 16px;
        color: #666;
        margin-bottom: 15px;
        text-align: left;
    }

    .btn-custom {
        display: inline-block;
        padding: 12px 25px;
        font-size: 18px;
        font-weight: bold;
        border-radius: 30px;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease-in-out;
        border: none;
        cursor: pointer;
    }

    .btn-booking {
        background: linear-gradient(to right, #ff6f00, #ff9100);
        color: white;
        box-shadow: 0px 4px 10px rgba(255, 111, 0, 0.3);
    }

        .btn-booking:hover {
            background: linear-gradient(to right, #ff9100, #ff6f00);
            transform: scale(1.05);
        }

    .btn-back {
        background: #777;
        color: white;
    }

        .btn-back:hover {
            background: #555;
            transform: scale(1.05);
        }
</style>

<div class="hotel-details-container">
    <h1>🏨 Hotel Details</h1>

    <img src="@(!string.IsNullOrEmpty(Model.Hotel.image) ? Model.Hotel.image : "https://source.unsplash.com/800x500/?hotel,resort")"
         class="hotel-img"
         alt="Hotel Image">

    <dl class="row hotel-info">
        <dt class="col-sm-4">🏨 Name:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Hotel.Name)</dd>

        <dt class="col-sm-4">📍 Location:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Hotel.Location)</dd>

        <dt class="col-sm-4">📝 Description:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Hotel.Description)</dd>

        <dt class="col-sm-4">📅 Created At:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Hotel.CreatedAt)</dd>
    </dl>

    <div class="text-center mt-4">
        <a asp-page="./Booking" asp-route-id="@Model.Hotel.Id" class="btn btn-custom btn-booking">💼 Book Now</a>
        <a asp-page="./Index" class="btn btn-custom btn-back">🔙 Back to List</a>
    </div>
</div>
