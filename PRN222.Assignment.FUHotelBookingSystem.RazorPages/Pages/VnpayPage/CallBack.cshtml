@page
@model PRN222.Assignment.FUHotelBookingSystem.RazorPages.Pages.VnpayPage.CallBackModel

@{
    ViewData["Title"] = "VNPay Transaction Status";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }

        .btn-custom {
            background-color: #5cb85c;
            color: white;
            border: none;
        }

            .btn-custom:hover {
                background-color: #4cae4c;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="card p-4 mx-auto" style="max-width: 600px;">
            <h2 class="text-center mb-4">VNPay Transaction Status</h2>

            @if (Model.VnpTransactionStatus == "Transaction successful.")
            {
                <div class="alert alert-success text-center">
                    <h4>Thank you for your payment! Your booking has been confirmed.</h4>
                    <p class="lead">Booking Details:</p>
                    <p><strong>Hotel:</strong> @Model.hotel.Name</p>
                    <p><strong>Room:</strong> @Model.room.RoomNumber</p>
                    <p><strong>Price:</strong> @Model.totalPrice VND</p>
                </div>
            }
            else
            {
                <div class="alert alert-danger text-center">
                    <h4>Payment failed or canceled.</h4>
                    <p class="lead">Please try again later.</p>
                </div>
            }

            <div class="text-center mt-4">
                <a href="@Url.Page("/BookingPage/Details")" class="btn btn-custom btn-lg">Go to Booking Details</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
